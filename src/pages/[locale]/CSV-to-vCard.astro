            <div>
              <h4 class="text-lg font-semibold text-base-900">{t('pages.csv.howSteps.1.title')}</h4>
              <p class="text-base-600 text-sm mt-1" set:html={t('pages.csv.howSteps.1.desc')}></p>
            </div>
          </div>

          <!-- 步骤 3: 转换处理 -->
