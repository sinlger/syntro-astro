---
// 1. 导入正确的模块和函数
const { t } = Astro.props;
const formats = [
  { name: t('supportedFormats.items.0.name'), desc: t('supportedFormats.items.0.desc'), icon: 'xlsx' },
  { name: t('supportedFormats.items.1.name'), desc: t('supportedFormats.items.1.desc'), icon: 'xls' },
  { name: t('supportedFormats.items.2.name'), desc: t('supportedFormats.items.2.desc'), icon: 'csv' },
];
---

<section class="py-16">
  <div class="px-8 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="text-center mb-10">
      <h2 class="text-xl leading-tight tracking-tight sm:text-2xl md:text-3xl lg:text-4xl font-medium text-base-900">{t('supportedFormats.title')}</h2>
      <p class="mt-3 text-base text-base-500">{t('supportedFormats.subtitle')}</p>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        formats.map((f) => (
          <div class="bg-accent-50 rounded-2xl p-8 shadow-sm ring-1 ring-base-200">
            <div class="mx-auto size-12 rounded-full bg-accent-700/20 text-base-700 flex items-center justify-center">
              {f.icon === "xlsx" && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <rect x="4" y="3" width="16" height="18" rx="2" stroke-width="1.8"></rect>
                  <path d="M8 8l2 3-2 3M12 8l-2 3 2 3M14 8h4M14 12h4M14 16h4" stroke-width="1.8"></path>
                </svg>
              )}
              {f.icon === "xls" && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <rect x="4" y="3" width="16" height="18" rx="2" stroke-width="1.8"></rect>
                  <path d="M7 8h6M7 12h10M7 16h10" stroke-width="1.8"></path>
                </svg>
              )}
              {f.icon === "csv" && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <rect x="4" y="3" width="16" height="18" rx="2" stroke-width="1.8"></rect>
                  <path d="M7 8h10M7 12h10M7 16h10" stroke-width="1.8"></path>
                  <path d="M7 12v7M11 8v11M15 10v9" stroke-width="1.2" opacity=".6"></path>
                </svg>
              )}
            </div>
            <div class="mt-5 text-base-900 font-semibold text-lg text-center">{f.name}</div>
            <p class="mt-3 text-sm text-base-500 text-center">{f.desc}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
