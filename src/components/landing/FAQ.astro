---
// 1. 导入正确的模块和函数
const { t } = Astro.props;
const items = [
  { q: t('faq.items.0.q'), a: t('faq.items.0.a') },
  { q: t('faq.items.1.q'), a: t('faq.items.1.a') },
  { q: t('faq.items.2.q'), a: t('faq.items.2.a') },
  { q: t('faq.items.3.q'), a: t('faq.items.3.a') }
];
---
<div class="w-full  py-16 md:py-24" id="FAQ">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- FAQ Section Header -->
        <div class="text-center mb-12">
            <h2 class="text-3xl sm:text-4xl font-extrabold text-base-900">
                {t('faq.title')}
            </h2>
            <p class="mt-4 text-xl text-base-600">
                {t('faq.subtitle')}
            </p>
        </div>

        <!-- FAQ Grid Container -->
        <div class="space-y-10">
          {items.map((item, idx) => (
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-4 bg-accent-50 rounded-2xl p-6 ring-1 ring-base-200">
              <div class="lg:sticky lg:top-0">
                <h3 class="text-lg font-bold text-accent-700">
                  {(idx + 1) + '. '}{item.q}
                </h3>
              </div>
              <div>
                <p class="text-base text-base-700 leading-relaxed" set:html={item.a}></p>
              </div>
            </div>
          ))}
        </div>

    </div>
</div>
