---
// 1. 导入正确的模块和函数
const { t } = Astro.props;
---
<div class="w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
        <div class="text-center bg-accent-50 rounded-2xl p-10 ring-1 ring-base-200">
            <h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold tracking-tight text-base-900 mb-6">
                <span class="block">Excel/CSV to VCF</span>
                <span class="block text-accent-700 mt-2">{t("hero.title")}</span>
            </h1>
            <p class="mt-3 max-w-2xl mx-auto text-xl sm:mt-5 sm:text-2xl text-base-600">
                {t("hero.description")}
            </p>
            <div class="mt-10 max-w-md mx-auto sm:flex sm:justify-center md:mt-12">
                <a href="CSV-to-vCard" class="w-full inline-flex items-center justify-center px-8 py-3 text-base font-bold rounded-full text-base-50 bg-accent-600 hover:bg-accent-700 md:py-4 md:text-lg md:px-10 transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-accent-700/40">
                    {t("hero.cta")}
                </a>
            </div>
            <div class="mt-8">
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-accent-100 text-accent-700 rounded-full font-medium text-sm ring-1 ring-base-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2h2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2h2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                    <span>{t("hero.badge")}</span>
                </div>
            </div>
        </div>
    </div>
</div>
