---
import OptimizedImage from "../../layouts/utilities/OptimizedImage.astro";
const { lang, t } = Astro.props;
const sections = [
  {
    title: t("footer.sections.features"),
    links: [
      { name: t("nav.csvToVCard"), href: `/${lang}/CSV-to-vCard` },
      { name: t("nav.excelToVCard"), href: `/${lang}/Excel-to-vCard` },
      { name: t("nav.vcardToExcel"), href: `/${lang}/vCard-to-Excel` },
    ],
  },
  {
    title: t("footer.sections.support"),
    links: [
      { name: t("info.faqPage.title"), href: `/${lang}/faq` },
      { name: t("info.support.title"), href: `/${lang}/support` },
      { name: t("info.changelog.title"), href: `/${lang}/changelog` },
    ],
  },
  {
    title: t("footer.sections.legal"),
    links: [
      { name: t("legal.privacy.title"), href: `/${lang}/privacy` },
      { name: t("legal.terms.title"), href: `/${lang}/terms` },
      { name: t("legal.cookie.title"), href: `/${lang}/cookie-policy` },
      { name: t("legal.copyright.title"), href: `/${lang}/copyright` },
    ],
  },
];
---

<footer
  class="bg-gradient-to-br  border-base-200 mt-20"
>
  <div class="px-6 md:px-12 lg:px-24 py-20 max-w-7xl mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-sm text-gray-600">
      <div class="md:col-span-1">
        <a href="/" class="inline-flex items-center gap-3">
          <OptimizedImage width={40} src="/logo.svg" alt="logo" />
          <span class="text-lg font-semibold text-black">{t("nav.brand")}</span>
        </a>
        <p class="mt-4 text-sm text-gray-500">{t("footer.intro")}</p>
      </div>
      {
        sections.map(({ title, links }) => (
          <div>
            <h4 class="text-base font-semibold text-black mb-5">{title}</h4>
            <ul>
              {links.map(({ name, href }) => (
                <li class="first:prose-a:pt-0 last:prose-a:pb-0">
                  <a
                    href={href}
                    class="hover:text-blue-600 py-2 inline-block transition"
                  >
                    {name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div
      class="pt-12 mt-12 border-t border-base-200 flex flex-col md:flex-row justify-between items-center text-xs text-gray-400"
    >
      <p>
        &copy; {new Date().getFullYear()} {t("footer.companyName")}.
      </p>
    </div>
  </div>
</footer>
